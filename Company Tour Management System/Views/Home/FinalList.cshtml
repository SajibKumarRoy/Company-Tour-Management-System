@model PaginatedList<Participant>
<div class="containers">
    <form asp-controller="Home" asp-action="FinalList">
        <div class="row">
            <div class="col-75">
                <input type="text" class="searchBar" name="SearchText" />
            </div>
            <div class="col-25">
                <button type="submit" class="searchbtn">Search</button>
            </div>
        </div>
    </form>
</div>
<table id="participants">
    <tr>
        <th>Name</th>
        <th>Department</th>
        <th>Position</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    @foreach (var participant in Model)
    {
        <tr>
            <td>@participant.Name</td>
            <td>@participant.Department</td>
            <td>@participant.Position</td>
            <td>@participant.Email</td>
            <td>
                <a class="button button-2" asp-route-Id=@participant.Id asp-action="Refund">Refund</a>
            </td>
        </tr>
    }
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div id="pn">
<a asp-action="FinalList"
   asp-route-pageNumber="@(Model.PageIndex-1)"
class="pn">
    Previous
</a>
<a asp-action="FinalList"
   asp-route-pageNumber="@(Model.PageIndex+1)"
class="pn">
    Next
</a>
</div>