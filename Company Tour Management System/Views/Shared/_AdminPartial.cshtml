@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@{
    if (_signInManager.IsSignedIn(User))
    {

        <a asp-area="">Hello @(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)</a>

     
        <a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>

    }
    else
    {
        <a asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Signin</a>

    }
}