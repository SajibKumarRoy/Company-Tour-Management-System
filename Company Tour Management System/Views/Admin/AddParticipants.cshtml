@{
    Layout = "_AdminLayout";
}
@model Participant
<div class="container">
    @if(ViewBag.Success==true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
           Succesfully Added Request
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <form method="post">
        <div class="row">
            <div class="col-25">
                <label asp-for="Name"></label>
            </div>
            <div class="col-75">
                <input type="text" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Department"></label>
            </div>
            <div class="col-75">
                <input type="text" asp-for="Department" placeholder="Department">
                <span asp-validation-for="Department"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Position"></label>
            </div>
            <div class="col-75">
                <input type="text" asp-for="Position" placeholder="Position">
                <span asp-validation-for="Position"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Email"></label>
            </div>
            <div class="col-75">
                <input type="text" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="row">
            <input id="btn" type="submit" value="Submit">
        </div>
    </form>
</div>